<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnswerActivity"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back_24px"/>

    <ImageView
        android:id="@+id/musiquiz_"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_musiquiz" />


    <Button
        android:id="@+id/rectangle"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="201dp"
        android:background="@drawable/rectangle"
        android:drawableTop="@drawable/not1"
        android:paddingTop="45dp"
        />

    <Button
        android:id="@+id/rectangle2"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="211dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="201dp"
        android:background="@drawable/rectangle2"
        android:drawableTop="@drawable/not2"
        android:paddingTop="50dp"
        />

    <Button
        android:id="@+id/rectangle3"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="443dp"
        android:background="@drawable/rectangle3"
        android:drawableTop="@drawable/not3"
        android:paddingTop="50dp"
        />

    <Button
        android:id="@+id/rectangle4"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="211dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="443dp"
        android:background="@drawable/rectangle4"
        android:drawableTop="@drawable/not4"
        android:paddingTop="50dp"
        />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/textColorWhite"
        android:textStyle="bold"
        android:textSize="35sp"
        />

</RelativeLayout>